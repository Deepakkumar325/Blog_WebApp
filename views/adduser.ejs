<%- include('layout/header') %>
<div class="container">
     <div class="container"><div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <div class="text-light">Add Blog Details</div>
                </div>
                <div class="card-body p-3">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required>
                        </div> <div class="mb-3">
                            <label for="phone">Text</label>
                            <textarea type="text" name="phone" class="form-control form-control-lg" placeholder="Write Something...." required></textarea>
                        </div> <div class="mb-3">
                            <label for="image">Select Img</label>
                            <input type="file" name="image" class="form-control " placeholder="Enter Name" required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Blog" class="btn btn-primary btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div> 
     </div></div>
</div>
<%- include('layout/footer') %>
